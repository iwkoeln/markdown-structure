{
    "name": "iwm/markdown-structure",
    "description": "A PHP library for scanning and structuring Markdown documentation files, with support for parsing and validating references.",
    "version": "0.0.1",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Armin Vieweg",
            "email": "vieweg@iwkoeln.de",
            "homepage": "https://www.iwmedien.de/"
        },
        {
            "name": "Joel Maximilian Mai",
            "email": "mai@iwkoeln.de",
            "homepage": "https://www.iwmedien.de/"
        }
    ],
    "require": {
        "php": "^8.1",
        "league/commonmark": "^2.4",
        "symfony/css-selector": "^6.2",
        "symfony/dom-crawler": "^6.2",
        "ext-dom": "*",
        "ext-json": "*",
        "symfony/finder": "^6.3",
        "symfony/console": "^6.3",
        "symfony/debug": "^4.4",
        "symfony/error-handler": "^6.3",
        "symfony/process": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "seld/phar-utils": "^1.2",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Iwm\\MarkdownStructure\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iwm\\MarkdownStructure\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@composer dump -o",
            "@test-php-unit"
        ],
        "test-with-coverage": [
            "@composer dump -o",
            "@test-php-unit-coverage"
        ],
        "test-php-unit": "export XDEBUG_MODE=coverage && ./vendor/bin/phpunit tests",
        "test-php-unit-coverage": "export XDEBUG_MODE=coverage && ./vendor/bin/phpunit tests --coverage-text --coverage-filter ./src"
    }
}
